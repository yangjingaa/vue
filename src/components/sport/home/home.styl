.main
  width 100%
  height: 100%;
  display flex
  align-items stretch
  font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
  .left
    flex 0 0 180px
    background #001529
    padding 0 10px
    min-height 774px
    img
      width 100%
      margin-bottom 10px
    .head-left
      height 66px
      width 100%
      background #3b3b3b
      color #fff
      line-height:66px
      text-align center
      font-size 15px

    .ulList
      .list
        width 100%
        padding 10px
        li
          height 50px
          margin-bottom 10px
          color rgba(255, 255, 255, 0.65)
          line-height 50px
          text-align center
          font-size 14px
          cursor pointer
          border-radius 4px
          transform all 2s
          &:hover
            background #3c3d61
  .right
    flex-grow 1
    box-shadow 0 2px 8px rgba(0, 0, 0, 0.15)
    overflow-y: auto;
    .rightHead
      width 100%
      height 66px
      line-height 66px
      background #27262d
      overflow hidden
      text-align right
      font-size 16px
      padding-right 20px
    .contentBox
      padding 32px

.router-link-exact-active
  background #3c3d61
.name{
  color: #fff
  font-size 20px
  margin-right  10px
}
